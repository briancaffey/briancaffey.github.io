e":34,"value":642},";\n",{"type":21,"tag":133,"props":644,"children":645},{"class":135,"line":236},[646],{"type":21,"tag":133,"props":647,"children":648},{"style":146},[649],{"type":34,"value":650},"    }\n",{"type":21,"tag":133,"props":652,"children":653},{"class":135,"line":249},[654],{"type":21,"tag":133,"props":655,"children":656},{"style":140},[657],{"type":34,"value":658},"?>\n",{"type":21,"tag":22,"props":660,"children":661},{},[662,664,670,672,678,680,685],{"type":34,"value":663},"This front-end code hits the backend API endpoint ",{"type":21,"tag":86,"props":665,"children":667},{"className":666},[],[668],{"type":34,"value":669},"http://product-service/",{"type":34,"value":671},", where ",{"type":21,"tag":86,"props":673,"children":675},{"className":674},[],[676],{"type":34,"value":677},"product-service",{"type":34,"value":679}," is the name of a service included in ",{"type":21,"tag":86,"props":681,"children":683},{"className":682},[],[684],{"type":34,"value":393},{"type":34,"value":686},":",{"type":21,"tag":123,"props":688,"children":690},{"code":689},"version: '3'\n\nservices:\n  product-service:\n    build: ./product\n    volumes:\n      - ./product:/usr/src/app\n    ports:\n      - 5001:80\n\n  website:\n    image: php:apache\n    volumes:\n      - ./website:/var/www/html\n    ports:\n      - 5000:80\n    depends_on:\n      - product-service\n",[691],{"type":21,"tag":86,"props":692,"children":693},{"__ignoreMap":8},[694],{"type":34,"value":689},{"type":21,"tag":22,"props":696,"children":697},{},[698,700,706,707,712,714,719,721,726],{"type":34,"value":699},"This is docker-compose file creates a network that includes both ",{"type":21,"tag":86,"props":701,"children":703},{"className":702},[],[704],{"type":34,"value":705},"website",{"type":34,"value":337},{"type":21,"tag":86,"props":708,"children":710},{"className":709},[],[711],{"type":34,"value":677},{"type":34,"value":713}," that can be accessed by simply creating a URL with the name of the service in the domain. Coming back to the fourth factor, ",{"type":21,"tag":66,"props":715,"children":716},{},[717],{"type":34,"value":718},"The code for a twelve-factor app makes no distinction between local and third party services",{"type":34,"value":720},", multiple docker containers can be thought of as ",{"type":21,"tag":37,"props":722,"children":723},{},[724],{"type":34,"value":725},"separate services",{"type":34,"value":727}," even though they may be running on the same virtual environment in either development or production, and the unique domain cooresponding to the service name seems to reinforce this concept.",{"type":21,"tag":22,"props":729,"children":730},{},[731],{"type":34,"value":732},"This URL could also be referenced with environment variables:",{"type":21,"tag":123,"props":734,"children":738},{"code":735,"language":736,"meta":8,"className":737,"style":8},"getUsers() {\n  axios.get(`${process.env.REACT_APP_USERS_SERVICE_URL}/users`)\n  .then((res) => { console.log(res); })\n  .catch((err) => { console.log(err); })\n}\n","javascript","language-javascript shiki shiki-themes github-light github-dark monokai",[739],{"type":21,"tag":86,"props":740,"children":741},{"__ignoreMap":8},[742,756,824,874,916],{"type":21,"tag":133,"props":743,"children":744},{"class":135,"line":136},[745,751],{"type":21,"tag":133,"props":746,"children":748},{"style":747},"--shiki-default:#6F42C1;--shiki-dark:#B392F0;--shiki-sepia:#A6E22E",[749],{"type":34,"value":750},"getUsers",{"type":21,"tag":133,"props":752,"children":753},{"style":146},[754],{"type":34,"value":755},"() {\n",{"type":21,"tag":133,"props":757,"children":758},{"class":135,"line":162},[759,764,769,773,778,784,789,794,799,803,809,814,819],{"type":21,"tag":133,"props":760,"children":761},{"style":146},[762],{"type":34,"value":763},"  axios.",{"type":21,"tag":133,"props":765,"children":766},{"style":747},[767],{"type":34,"value":768},"get",{"type":21,"tag":133,"props":770,"children":771},{"style":146},[772],{"type":34,"value"